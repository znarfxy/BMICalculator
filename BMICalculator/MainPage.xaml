<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculator.MainPage"
             Title=""
             BackgroundColor="#C0C0C0">

    <ScrollView>
        <VerticalStackLayout
            Padding="16,20,16,20"
            Spacing="0">

            <!-- Window chrome / title bar -->
            <Border BackgroundColor="#000080"
                    Padding="5,4"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0" />
                </Border.StrokeShape>
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Icon + Title -->
                    <HorizontalStackLayout Grid.Column="0" Spacing="5" VerticalOptions="Center">
                        <Label Text="🖥" FontSize="12" TextColor="White" VerticalOptions="Center" />
                        <Label Text="Body Mass Index Calculator"
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <!-- Win98 window control buttons -->
                    <HorizontalStackLayout Grid.Column="2" Spacing="2" VerticalOptions="Center">
                        <Border Stroke="#FFFFFF" StrokeThickness="1" BackgroundColor="#C0C0C0" Padding="0" WidthRequest="16" HeightRequest="14">
                            <Border.StrokeShape><RoundRectangle CornerRadius="0" /></Border.StrokeShape>
                            <Label Text="_" FontSize="9" TextColor="#000000" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,-3,0,0" />
                        </Border>
                        <Border Stroke="#FFFFFF" StrokeThickness="1" BackgroundColor="#C0C0C0" Padding="0" WidthRequest="16" HeightRequest="14">
                            <Border.StrokeShape><RoundRectangle CornerRadius="0" /></Border.StrokeShape>
                            <Label Text="□" FontSize="9" TextColor="#000000" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <Border Stroke="#FFFFFF" StrokeThickness="1" BackgroundColor="#C0C0C0" Padding="0" WidthRequest="16" HeightRequest="14">
                            <Border.StrokeShape><RoundRectangle CornerRadius="0" /></Border.StrokeShape>
                            <Label Text="✕" FontSize="9" TextColor="#000000" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <!-- Win98 menu bar -->
            <Border BackgroundColor="#C0C0C0"
                    Stroke="#808080"
                    StrokeThickness="0,0,0,1"
                    Padding="4,2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="0">
                    <Label Text="  File  " FontSize="12" FontFamily="Courier New" TextColor="#000000" />
                    <Label Text="  Help  " FontSize="12" FontFamily="Courier New" TextColor="#000000" />
                </HorizontalStackLayout>
            </Border>

            <!-- Main window body — outer raised border -->
            <Border BackgroundColor="#C0C0C0"
                    Stroke="#FFFFFF"
                    StrokeThickness="2"
                    Padding="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0" />
                </Border.StrokeShape>
                <Border BackgroundColor="#C0C0C0"
                        Stroke="#808080"
                        StrokeThickness="2"
                        Padding="16,14">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="0" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">

                        <!-- Form header -->
                        <Label Text="Enter your measurements below to calculate your Body Mass Index (BMI)."
                               FontSize="12"
                               FontFamily="Courier New"
                               TextColor="#000000"
                               Margin="0,0,0,4" />
                        <BoxView HeightRequest="1" Color="#808080" Margin="0,0,0,4" />

                        <!-- Height label + sunken input -->
                        <Label Text="Height (cm):"
                               FontSize="13"
                               FontFamily="Courier New"
                               TextColor="#000000" />
                        <Border Stroke="#808080"
                                StrokeThickness="2"
                                BackgroundColor="#FFFFFF"
                                Padding="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="0" />
                            </Border.StrokeShape>
                            <Border Stroke="#DFDFDF"
                                    StrokeThickness="1"
                                    BackgroundColor="#FFFFFF"
                                    Padding="2,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="0" />
                                </Border.StrokeShape>
                                <Entry x:Name="HeightEntry"
                                       Placeholder="e.g. 170"
                                       PlaceholderColor="#808080"
                                       Keyboard="Numeric"
                                       FontSize="14"
                                       FontFamily="Courier New"
                                       TextColor="#000000"
                                       BackgroundColor="Transparent" />
                            </Border>
                        </Border>

                        <!-- Weight label + sunken input -->
                        <Label Text="Weight (kg):"
                               FontSize="13"
                               FontFamily="Courier New"
                               TextColor="#000000" />
                        <Border Stroke="#808080"
                                StrokeThickness="2"
                                BackgroundColor="#FFFFFF"
                                Padding="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="0" />
                            </Border.StrokeShape>
                            <Border Stroke="#DFDFDF"
                                    StrokeThickness="1"
                                    BackgroundColor="#FFFFFF"
                                    Padding="2,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="0" />
                                </Border.StrokeShape>
                                <Entry x:Name="WeightEntry"
                                       Placeholder="e.g. 86"
                                       PlaceholderColor="#808080"
                                       Keyboard="Numeric"
                                       FontSize="14"
                                       FontFamily="Courier New"
                                       TextColor="#000000"
                                       BackgroundColor="Transparent" />
                            </Border>
                        </Border>

                        <!-- Divider -->
                        <BoxView HeightRequest="1" Color="#808080" Margin="0,4" />

                        <!-- Win98 raised button -->
                        <Border Stroke="#FFFFFF"
                                StrokeThickness="2"
                                BackgroundColor="#C0C0C0"
                                Padding="0"
                                HorizontalOptions="Center"
                                MinimumWidthRequest="160">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="0" />
                            </Border.StrokeShape>
                            <Border Stroke="#808080"
                                    StrokeThickness="1"
                                    BackgroundColor="#C0C0C0"
                                    Padding="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="0" />
                                </Border.StrokeShape>
                                <Button Text="Calculate"
                                        Clicked="OnCalculateClicked"
                                        BackgroundColor="#C0C0C0"
                                        TextColor="#000000"
                                        FontSize="14"
                                        FontFamily="Courier New"
                                        FontAttributes="Bold"
                                        CornerRadius="0"
                                        HeightRequest="34"
                                        Padding="20,0"
                                        BorderWidth="0" />
                            </Border>
                        </Border>

                        <!-- Result panel (sunken groupbox style) -->
                        <Border x:Name="ResultFrame"
                                IsVisible="False"
                                Stroke="#808080"
                                StrokeThickness="2"
                                BackgroundColor="#C0C0C0"
                                Padding="14,12">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="0" />
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="4">
                                <Label Text="[ Result ]"
                                       FontSize="11"
                                       FontFamily="Courier New"
                                       TextColor="#808080"
                                       HorizontalOptions="Center" />
                                <Label x:Name="BmiValueLabel"
                                       FontSize="52"
                                       FontAttributes="Bold"
                                       FontFamily="Courier New"
                                       HorizontalOptions="Center"
                                       TextColor="#000080" />
                                <Label x:Name="BmiCategoryLabel"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       FontFamily="Courier New"
                                       HorizontalOptions="Center" />
                                <BoxView HeightRequest="1" Color="#808080" Margin="10,4" />
                                <Label x:Name="BmiDescriptionLabel"
                                       FontSize="12"
                                       FontFamily="Courier New"
                                       HorizontalOptions="Center"
                                       TextColor="#000000"
                                       HorizontalTextAlignment="Center" />
                            </VerticalStackLayout>
                        </Border>

                    </VerticalStackLayout>
                </Border>
            </Border>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
